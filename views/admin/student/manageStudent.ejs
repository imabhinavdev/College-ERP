<body>
    <!-- Home Page Card Starting-------------- -->
    <button id="goBackButton"><i class="material-icons">arrow_back</i></button>
    <div class="container text-center">
        <!-- Stack the columns on mobile by making one full-width and the other half-width -->
        <div class="row mt-4">
            <div class="col-6 col-md-4 mb-5">
                <div class="card shadow-lg p-3 mb-5 bg-body-tertiary rounded">
                    <div class="card-body">
                        <h5 class="card-title">Search Student Details</h5>
                        <p class="card-text">Search details of any Student by ID</p>
                        <form class="d-flex" action="/admin/searchstudent" method="post">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search"
                                required name="enroll" minlength="12" maxlength="12">

                            <button class="btn btn-outline-success" type="submit">
                                <span class="material-symbols-outlined">search</span>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4 mb-5">
                <div class="card shadow-lg p-3 mb-5 bg-body-tertiary rounded">
                    <div class="card-body">
                        <h5 class="card-title">Show Student Details</h5>
                        <p class="card-text">All the details of Faculties</p>
                        <a href="/admin/studenttable" class="btn btn-primary">Show</a>
                    </div>
                </div>
            </div>

        </div>
        <!-- Home Page Card Ending -------------- -->
    </div>



    <!-- Modal -->
    <div class="modal fade" id="studentModal" tabindex="-1" aria-labelledby="studentModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="studentModalLabel">Student Information</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="modal-body">
                            <!-- Add your student information here -->
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="studentName">Name:</label>
                                </div>
                                <div class="col-md-6">
                                    <span id="studentName">John Doe</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="studentEnroll">Enrollment:</label>
                                </div>
                                <div class="col-md-6">
                                    <span id="studentEnroll">12345</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="email">Email:</label>
                                </div>
                                <div class="col-md-6">
                                    <span id="email">abc@gmail.com</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="mobileno">Mobile No:</label>
                                </div>
                                <div class="col-md-6">
                                    <span id="mobileno">9798544538</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="gender">Gender:</label>
                                </div>
                                <div class="col-md-6">
                                    <span id="gender">Male</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="guardian_name">Guardian
                                        Name:</label>
                                </div>
                                <div class="col-md-6">
                                    <span id="guardian_name">Amrendra kr.
                                        singh</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="guardian_number">Guardian
                                        No:</label>
                                </div>
                                <div class="col-md-6">
                                    <span id="guardian_number">9798544538</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="currentcgpa">Current CGPA:</label>
                                </div>
                                <div class="col-md-6">
                                    <span id="currentcgpa">9.8</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="course">Course:</label>
                                </div>
                                <div class="col-md-6">
                                    <span id="course">CSE</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="programme">Programme:</label>
                                </div>
                                <div class="col-md-6">
                                    <span id="programme">BTech</span>
                                </div>
                            </div>



                            <!-- Add more student details here -->
                        </div>
                        <!-- Add more fields as needed -->
                    </div>
                </div>
            </div>
        </div>
    </div>





    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>
    <script>
        function performSearch() {
            var searchInput = document.getElementById("searchInput");

            if (searchInput.value.trim() === "") {
                alert("Please enter a search query.");
            } else {
                window.location.href = './search_student.html';
            }
        }
    </script>
    <script>
        // Function to go back to the previous page
        function goBack() {
            window.history.back();
        }

        // Add click event listener to the button
        const backButton = document.getElementById("goBackButton");
        backButton.addEventListener("click", goBack);
    </script>
</body>

</html>